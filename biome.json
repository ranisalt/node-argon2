{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "files": {
    "include": ["*.cjs", "*.json"],
    "ignore": [".vscode"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
