{
  "name": "argon2",
  "version": "0.19.3",
  "description": "An Argon2 library for Node",
  "main": "argon2.js",
  "types": "argon2.d.ts",
  "scripts": {
    "install": "prebuild-install || node-gyp rebuild",
    "benchmark": "node test/benchmark.js",
    "clean": "node-gyp clean && rm -rf .nyc_output",
    "lint": "standard --verbose",
    "test": "mocha test/test.js",
    "test-ts": "tsc -p . && node test/test-d.js",
    "rebuild": "prebuild --compile",
    "prebuild-node": "prebuild -t 6.11.0 -t 7.9.0 -t 8.9.0 -t 9.4.0 --strip --debug",
    "prebuild-electron": "prebuild -t 1.6.11 -t 1.7.10 -t 1.8.0 -t 2.0.0 -r electron --strip --debug",
    "upload": "node ./script/upload.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ranisalt/node-argon2.git"
  },
  "keywords": [
    "argon2",
    "crypto",
    "encryption",
    "hashing",
    "password"
  ],
  "author": "Ranieri Althoff <ranisalt+argon2@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ranisalt/node-argon2/issues"
  },
  "homepage": "https://github.com/ranisalt/node-argon2#readme",
  "dependencies": {
    "node-addon-api": "^1.6.0",
    "@phc/format": "^0.5.0",
    "any-promise": "^1.3.0",
    "bindings": "^1.3.0",
    "prebuild-install": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^10.12.10",
    "mocha": "^5.1.1",
    "prebuild": "^7.6.1",
    "sandra": "^0.3.2",
    "typescript": "^2.8.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "standard": {
    "env": "mocha"
  }
}
